// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id         Int      @id @default(autoincrement())
  marca      String
  modelo     String
  year       Int
  km         Int
  color      String
  ac         Boolean
  pasajeros  Int
  cambios    CajaType
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum CajaType {
  MANUAL
  AUTOMATICO
}

model Client {
  id               Int      @id @default(autoincrement())
  nombre           String
  apellido         String
  tipo_documento   DocumentoType
  nro_documento    String
  nacionalidad     String
  direccion        String
  telefono         String
  email            String   @unique()
  fecha_nacimiento DateTime
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt
}

enum DocumentoType {
  PASAPORTE
  DNI
  CEDULA
}